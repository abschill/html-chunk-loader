{
	"name": "html-chunk-loader",
	"version": "0.7.7",
	"description": "Lightweight SSR/SSG Template Engine for Node",
	"homepage": "https://htmlc.abschill.com/",
	"main": "lib/index.js",
	"exports": {
		".": "./lib/index.js"
	},
	"files": [
		"lib/**/*"
	],
	"bin": "lib/cli/index.js",
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "jest --coverage",
		"preparePublish": "python scripts/refresh-build.py",
		"test:ssg": "node lib/cli/ssg/index.js",
		"lint:src": "eslint --fix src/**/*"
	},
	"keywords": [
		"html",
		"ssr",
		"template",
		"template engine",
		"engine",
		"parser",
		"ssg",
		"rendering"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/webpuppy/htmlc"
	},
	"author": "abschill",
	"license": "ISC",
	"devDependencies": {
		"@types/jest": "^27.0.1",
		"@typescript-eslint/eslint-plugin": "^5.15.0",
		"@typescript-eslint/parser": "^5.15.0",
		"eslint": "^8.11.0",
		"jest": "^27.1.0",
		"nyc": "^15.1.0",
		"ts-jest": "^27.0.5",
		"typescript": "^4.4.2"
	},
	"hcl_config": {
		"ssr_config": {
			"pathRoot": "test-pkg/barebones",
			"partials": "partials",
			"templates": "templates",
			"partialInput": {},
			"templateInput": {},
			"watch": false,
			"discoverPaths": false,
			"intlCode": "en",
			"debug": {
				"logMode": "silent",
				"logStrategy": "none",
				"logFile": null
			}
		},
		"ssg_config": {
			"pathRoot": "test-pkg/static",
			"partials": "layout",
			"templates": "pages",
			"outPath": "public",
			"debug": false,
			"cleanup": true
		}
	},
	"dependencies": {
		"htmlc-compiler": "^0.1.0",
		"htmlc-types": "^0.1.6",
		"terminal-color": "^0.2.0"
	}
}
