{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "allowJs": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "lib",
        "removeComments":true
    },
    "include": [
        "lib/index.ts",
        "lib/options.d.ts",
        "lib/internals.d.ts",
        "lib/util/cli/index.ts"
    ],
    "exclude":[
        "./tests/**/*",
        "./dist/**/*"
    ],
    "typedocOptions": {
        "entryPoints": [
            "./lib/options.d.ts"
        ],
        "out": "docs"
    }
}