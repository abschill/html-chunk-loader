{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "./lib",
        "rootDir": "src",
        "removeComments": true
    },
    "include": [
        "./src/**/*"   
    ],
    "exclude":[
        "./tests/**/*",
        "./lib/**/*"
    ]
}