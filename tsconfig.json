{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "alwaysStrict": true,
        "removeComments": true,
		"lib": ["es6"]
    },
	"exclude": [
		"node_modules"
	]
}
