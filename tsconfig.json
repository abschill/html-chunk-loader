{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "allowJs": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "lib",
        "resolveJsonModule": true
    },
    "include": [
        "lib/index.ts"
    ],
    "exclude":[
        "tests/**/*"
    ]
}