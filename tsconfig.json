{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "lib",
        "removeComments": true
    },
    "include": [
        "lib/**/*"
    ],
    "exclude":[
        "./tests/**/*",
        "./dist/**/*"
    ]
}